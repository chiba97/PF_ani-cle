<% if user_signed_in? %>
  <%= form_with url: searches_path, class: "search-form", local: true, method: :get do |f| %>
    <%= f.text_field :word, :placeholder => " Search User & Post", class: "search-field" %>
    <%= f.select :range, options_for_select([["ユーザー", "User"],["投稿記事", "Post"]]), class: "search-select" %>
    <%= f.select :search, options_for_select([["完全一致", "perfect_match"],["部分一致", "partial_match"]]), class: "search-select" %>
    <%= button_tag type: "submit", class: "btn header-search-btn" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
<% elsif admin_signed_in? %>
  <%= form_with url: searches_path, class: "search-form", local: true, method: :get do |f| %>
    <%= f.text_field :word, :placeholder => " Search User" %>
    <%= f.hidden_field :range, :value => "User" %>
    <%= f.select :search, options_for_select([["完全一致", "perfect_match"],["部分一致", "partial_match"]])%>
    <%= button_tag type: "submit", class: "btn header-search-btn" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
<% else %>
  <%= form_with url: searches_path, class: "search-form", local: true, method: :get do |f| %>
    <%= f.text_field :word, :placeholder => " Search Post" %>
    <%= f.hidden_field :range, :value => "Post" %>
    <%= f.select :search, options_for_select([["完全一致", "perfect_match"],["部分一致", "partial_match"]])%>
    <%= button_tag type: "submit", class: "btn header-search-btn" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
<% end %>