<div class="container post-page">
  <%= render "user/posts/error", user: @contact %>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 contact-wrap">
      <h3 class="contact-title"><i class="far fa-envelope"></i> お問い合わせフォーム <i class="far fa-envelope"></i></h3>
      <%= form_with model: @contact, local:true do |f| %>
        <div class="form-group mt-5">
          <i class="fas fa-paw"></i> タイトル <i class="fas fa-paw"></i>
          <%= f.text_field :title, class: "form-control", :placeholder => "※ 入力は必須になります" %>
        </div>
        <div class="form-group mt-4">
          <i class="fas fa-paw"></i> お問い合わせ内容 <i class="fas fa-paw"></i>
          <%= f.text_area :body, class: "form-control", :placeholder => "※ 入力は必須になります" %>
        </div>
        <div class="form-group mt-5">
          <%= button_tag type: "submit", class: "btn post-btn" do %>
            送信する <i class="far fa-paper-plane"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>