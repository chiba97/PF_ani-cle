<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-">

      <h4 class="mt-5 new-title pb-3 mb-4">新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

        <div class="field mb-3">
          <%= f.label :name, "ニックネーム" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", size: "70",class: "new-field" %>
        </div>

        <div class="field mb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email", size: "70", :placeholder => "example@gmail.com", class: "new-field pl-2" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: "70", class: "new-field" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "70", class: "new-field" %>
        </div>

        <div class="actions mb-4 text-center">
          <%= f.submit "新規登録", class: "new-btn" %>
        </div>
      <% end %>

      <p>
        既に登録がお済みの方は、
        <%= link_to "こちら", new_user_session_path , class: "new-link"%>
        からログインしてください。
      </p>

    </div>
  </div>
</div>
