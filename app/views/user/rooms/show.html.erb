<div class="container room-page">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <div class="text-center user-room-title">
        <h2 class="room-title">
          <%= link_to user_path(@user.id), class: "back-link" do %>
          <%= @user.name %>さん
          <% end %>
          との<br>
          <i class="far fa-comments"></i> チャットルーム <i class="far fa-comments"></i>
        </h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 message">
      <div id="message_<%= @room.id %>">
        <%= render "user/messages/message", messages: @messages %>
      </div>
    </div>
  </div>

  <div class="row room-message-form pt-3">
    <div class="col-sm-6 ml-auto">
      <%= form_with model: @message do |f| %>
      <div class="form-group">
        <%= f.text_field :content, placeholder: "メッセージを入力してください", class: "form-control" %>
        <%= f.hidden_field :room_id, value: @room.id %>
      </div>
      <div class="form-group text-right">
        <%= button_tag type: "submit", class: "btn message-btn" do %>
        送信 <i class="far fa-paper-plane"></i>
        <% end %>
        <%= link_to user_path(@user.id), class: "btn message-btn" do %>
        戻る <i class="fas fa-undo-alt"></i>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>