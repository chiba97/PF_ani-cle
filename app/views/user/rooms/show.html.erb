<div class="container room-page">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <div class="text-center user-room-title">
        <h2 class="room-title">
          <%= link_to user_path(@user.id), class: "back-link" do %>
            <%= @user.name %>さん
          <% end %>
          との<br>
          <i class="fas fa-comments"></i> チャットルーム <i class="fas fa-comments"></i>
        </h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 message">
      <div id="message_<%= @room.id %>">
        <%= render "user/messages/message", messages: @messages %>
      </div>
    </div>
  </div>
  <div class="row room-message-form pt-3">
    <div class="col-sm-6 ml-auto">
      <%= form_with model: @message do |f| %>
        <div class="form-group">
          <%= f.text_field :content, placeholder: "メッセージを入力してください", class: "form-control" %>
          <%= f.hidden_field :room_id, value: @room.id %>
        </div>
        <div class="form-group text-right">
          <%= button_tag " 送信する", type: "submit", class: "btn message-btn fas fa-paper-plane" %>
          <%= link_to " 戻る", user_path(@user.id), class: "btn message-btn fas fa-undo-alt" %>
        </div>
      <% end %>
    </div>
  </div>
</div>