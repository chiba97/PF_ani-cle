<div class="container post-index-page">
  <p class="text-center pt-1 post-notice"><%= notice %></p>
  <div class="text-center pt-4">
    <h3 class="post-title"><i class="fas fa-dog"></i>投稿された記事 全<%= @post_all.count %>件<i class="fas fa-cat"></i></h3>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-3 mt-5">
        <div class="card index-card">
            <%= attachment_image_tag post, :post_image, class: "post-index-img" %>
            <div class="card-body">
              <div class="row">
                <%= link_to user_path(post.user.id) do %>
                <%= attachment_image_tag post.user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
                <% end %>
              </div>
              <div class="row">
                <%= link_to user_path(post.user.id),class: "profile-link" do %>
                <p>投稿者<br><i class="fas fa-user"></i> <%= post.user.name %>さん <i class="fas fa-user"></i></p>
                <% end %>
              </div>
              <div class="row">
                <p>ペットの種類<br><i class="fas fa-paw"></i> <%= post.pet %> <i class="fas fa-paw"></i></p>
              </div>
              <div class="row mt-2">
              <%= link_to "詳細へ", post_path(post.id), class: "btn post-index-btn" %>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
  <div class="pt-3 pb-3 pl-5">
    <p><%= paginate @posts %></p>
  </div>
</div>