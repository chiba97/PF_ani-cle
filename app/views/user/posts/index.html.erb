<div class="container post-index-page">
  <div class="text-center pt-4">
    <h3 class="post-title"><i class="fas fa-dog"></i>投稿された記事 全<%= @posts.count %>件<i class="fas fa-cat"></i></h3>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-3">
        <div class="card">
            <%= attachment_image_tag post, :post_image %>
            <div class="card-body">
              <div class="row">
                <%= attachment_image_tag post.user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
              </div>
              <div class="row">
                <p>投稿者<br><i class="fas fa-paw"></i><%= post.user.name %>さん<i class="fas fa-paw"></i></p>
              </div>
              <div class="row">
                <p>種類<br><i class="fas fa-paw"></i><%= post.pet %><i class="fas fa-paw"></i></p>
              </div>
              <div class="row mt-2">
              <%= link_to "詳細へ", post_path(post.id), class: "btn post-index-btn" %>
              </div>
            </div>
          </div>
      </div>
    <% end %>
    <div>
      <%= paginate @posts %>
    </div>
  </div>
</div>