<% if post.user.id == current_user.id %>
  <%= link_to edit_post_path(post.id), class: "btn post-show-btn" do %>
    編集 <i class="fas fa-edit"></i>
  <% end %>
  <%= link_to post_path(post.id),method: :delete, class: "btn post-show-btn ml-3", data: { confirm: '本当に削除しますか？' } do %>
    削除 <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>
<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), class: "btn post-show-btn ml-3", method: :delete do %>
    お気に入り解除 <i class="fas fa-heart"></i> 
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), class: "btn post-show-btn ml-3", method: :post do %>
    お気に入り登録 <i class="far fa-heart"></i> 
  <% end %>
<% end %>