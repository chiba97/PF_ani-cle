<div class="container post-page">
  <%= render "user/posts/error", user: @post %>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 post-new-wrap">
      <h3 class="post-new-title"><i class="fas fa-envelope"></i> ペットへ愛を届けよう<i class="fas fa-envelope"></i></h3>
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group mt-5">
          <i class="fas fa-paw"></i> ペットの写真 <i class="fas fa-paw"></i>
          <%= f.label :post_image, "写真を選択", class: "image-input-btn" %>
          <%= f.attachment_field :post_image, class: "d-none"%>
        </div>
        <div class="form-group mt-5">
          <i class="fas fa-paw"></i> ペットの種類を教えてください <i class="fas fa-paw"></i>
          <%= f.text_field :pet, class: "form-control", :placeholder => "犬 ゴールデンレトリバー" %>
        </div>
        <div class="form-group mt-5">
          <i class="fas fa-paw"></i> 投稿内容を記載してください <i class="fas fa-paw"></i>
          <%= f.text_area :body, class: "form-control", :placeholder => "今日は天気が良かったので、愛犬のぐりこと公園に行ってきました！　帰りは疲れて車でぐっすり眠っていました。" %>
        </div>
        <div class="form-group mt-5">
          <%= button_tag type: "submit", class: "btn post-btn" do %>
          投稿する <i class="far fa-paper-plane"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>