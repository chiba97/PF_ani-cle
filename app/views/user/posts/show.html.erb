<div class="container post-page">
  <p class="text-center pt-1"><%= notice %></p>
  <div class="text-center pt-4">
    <h3 class="post-show-title"><i class="fas fa-paw"></i>投稿内容の詳細<i class="fas fa-paw"></i></h3>
  </div>
  <div class="row mt-5">
    <div class="col-sm-6">
      <div>
        <%= attachment_image_tag @post, :post_image, class: "post-show-image" %>
      </div>
    </div>
    <div class="col-sm-6 post-show-text">
      <div class="row mt-2">
        <%= link_to user_path(@post.user.id) do %>
          <%= attachment_image_tag @post.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
        <% end %>
      </div>
      <div class="row mt-3">
        <%= link_to user_path(@post.user.id), class: "profile-link-show" do %>
          <% if @post.user == current_user %>
            ＜投稿者＞<br>
            あなたが<%= @post.created_at.to_s(:datetime_jp) %>に投稿
          <% else %>
            ＜投稿者＞<br>
            <%= @post.user.name %>さんが<%= @post.created_at.to_s(:datetime_jp) %>に投稿
          <% end %>
        <% end %>
      </div>
      <div class="row mt-3">
        ＜ペットの種類＞<br>
        <%= @post.pet %>
      </div>
      <div class="row mt-3">
        ＜投稿内容＞<br>
        <%= simple_format(@post.body) %>
      </div>
      <div class="row mt-4">
        <%= render "user/posts/favorite", post: @post %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-sm-10">
      <%= render "user/posts/comment-form", post: @post, comment: @comment %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-10 mb-5">
      <p>コメント：<%= @post.comments.count %> 件</p>
      <%= render "user/posts/comments", post: @post %>
    </div>
  </div>
</div>
