<div class="container post-page">
  <div class="text-center pt-4">
    <h3 class="post-show-title"><i class="fas fa-paw"></i>投稿内容の詳細<i class="fas fa-paw"></i></h3>
  </div>
  <div class="row mt-5">
    <div class="col-sm-6">
      <div>
        <%= attachment_image_tag @post, :post_image, class: "post-show-image" %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="row mt-2">
        <%= link_to user_path(@post.user.id) do %>
          <%= attachment_image_tag @post.user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
        <% end %>
      </div>
      <div class="row mt-3">
        <%= link_to user_path(@post.user.id), class: "profile-link-show" do %>
          <% if @post.user == current_user %>
            ＜投稿者＞<br>
            あなたが<%= @post.created_at.to_s(:datetime_jp) %>に投稿
          <% else %>
            ＜投稿者＞<br>
            <%= @post.user.name %>さんが<%= @post.created_at.to_s(:datetime_jp) %>に投稿
          <% end %>
        <% end %>
      </div>
      <div class="row mt-3">
        ＜ペットの種類＞<br>
        <%= @post.pet %>
      </div>
      <div class="row mt-3">
        ＜投稿内容＞<br>
        <%= @post.body %>
      </div>
      <div class="row mt-4">
        <% if @post.user.id == current_user.id %>
          <%= link_to "編集する", edit_post_path(@post.id), class: "btn post-show-btn" %>
          <%= link_to "削除する", post_path(@post.id),method: :delete, class: "btn post-show-btn ml-3", data: { confirm: '本当に削除しますか？' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>