<div class="container post-page">
  <%= render "user/posts/error", user: @post %>
  <div class="row justify-content-center">
    <div class="col-sm-6 mt-5">
      <h3 class="post-title text-center"><i class="fas fa-paw"></i>投稿内容の編集<i class="fas fa-paw"></i></h3>
      <%= form_with model: @post, local:true do |f| %>
      <div class="form-group mt-5">
        <i class="fas fa-paw"></i> ペットの写真 <i class="fas fa-paw"></i>
        <%= f.label :post_image, "写真を選択", class: "image-input-btn" %>
        <%= f.attachment_field :post_image, class: "d-none"%>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :pet, "ペットの種類" %> <i class="fas fa-paw"></i>
        <%= f.text_field :pet, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :body, "投稿内容" %> <i class="fas fa-paw"></i>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <%= button_tag type: "submit", class: "btn post-show-btn" do %>
        保存する <i class="fas fa-save"></i>
        <% end %>
        <%= link_to post_path(@post), class: "btn post-show-btn ml-3" do %>
        戻る <i class="fas fa-undo-alt"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>