<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3>新規編集</h3>
      <%= form_with model: @post, local:true do |f| %>
      <div class="form-group">
        <%= f.label :post_image, "ペット写真" %>
        <%= f.attachment_field :post_image, class: "d-block"%>
      </div>
      <div class="form-group">
        <%= f.label :pet, "ペットの種類" %>
        <%= f.text_field :pet, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "投稿内容" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更内容保存", class: "btn btn-success" %>
      </div>
      <% end %>
      <%= link_to "詳細に戻る"%>
    </div>
  </div>
</div>