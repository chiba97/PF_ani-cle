<%= form_with(model:[post, comment], local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, rows:'3',placeholder: "コメントを入力", class: "form-control comment-form" %>
  </div>
  <div class="form-group text-right">
    <%= button_tag type: "submit", class: "btn post-show-btn" do %>
      コメントする <i class="far fa-paper-plane"></i>
    <% end %>
  </div>
<% end %>