<div class="container user-page">
  <div class="row justify-content-center">
    <div class="col-sm-12 mb-5">
      <h2 class="text-center mt-4 mb-5 user-show-title">
        <i class="fas fa-users"></i>
          <%= @user.name %>さんをフォローしているユーザー
        <i class="fas fa-users"></i>
      </h2>
        <% if @users.present? %>
          <%= render "user/users/follow_index", users: @users, is_room: @is_room, room_id: @room_id, room: @room, entry: @entry %>
        <% else %>
          <h3 class="text-center pt-3 pb-5">※まだフォローされていません</h3>
        <% end %>
    </div>
    </div>
  </div>
  <div class="pt-3 pb-3">
    <p><%= paginate @users %></p>
  </div>
</div>