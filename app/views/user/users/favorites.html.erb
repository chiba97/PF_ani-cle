<div class="container user-page">
  <div class="row justify-content-center">
    <div class="col-sm-12 mb-5">
      <h2 class="text-center user-favorites-title">
        <%= link_to user_path(@user.id), class: "back-link" do %>
          <%= @user.name %>さん
        <% end %>
        が<br>
        <i class="far fa-bookmark"></i> お気に入りした投稿 <i class="far fa-bookmark"></i>
      </h2>
      <% if @favorite_posts.present? %>
        <div class="row justify-content-center">
          <%= render "user/posts/post_index", posts: @favorite_posts %>
        </div>
      <% else %>
        <h3 class="text-center no-present-title pt-3 pb-5">※まだお気に入り登録していません</h3>
      <% end %>
    </div>
  </div>
  <div class="pt-3 pb-3">
    <p><%= paginate @favorite_posts %></p>
  </div>
</div>