<table class="table table-hover">
  <thead>
    <tr>
      <th class="follow-th"></th>
      <th class="follow-th">ニックネーム</th>
      <th class="follow-th">飼っているペット</th>
      <th class="follow-th">自己紹介</th>
      <th class="follow-th"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class="follow-th">
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
          <% end %>
        </td>
        <td class="follow-th">
          <%= link_to user_path(user.id), class: "follow-link" do %>
            <%= user.name %>さん
          <% end %>
        </td>
        <td class="follow-th"><%= user.pet %></td>
        <td class="follow-th"><%= user.introduction %></td>
        <td class="follow-th">
          <% if user != current_user %>
            <% if user.followed_by?(current_user) %>
              <%= link_to user_relationships_path(user.id), method: :delete, class: "btn user-show-btn mr-3" do %>
                フォロー解除 <i class="fas fa-user-minus"></i>
              <% end %>
            <% else %>
              <%= link_to user_relationships_path(user.id), method: :post, class: "btn user-show-btn mr-3" do %>
                フォローする <i class="fas fa-user-plus"></i>
              <% end %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if (current_user.followed_by? user) && (user.followed_by? current_user) %>
            <% if user.exists_room_by?(current_user) == true %>
              <%= link_to room_path(user.room_by(user), user_id: user.id), class: "btn user-show-btn" do %>
                チャットを始める <i class="far fa-comments"></i>
              <% end %>
            <% else %>
                <%= form_with model: room, local: true do |f| %>
                  <%= fields_for entry do |e| %>
                    <%= e.hidden_field :user_id, value: user.id %>
                  <% end %>
                  <%= button_tag type: "submit", class: "btn user-show-btn" do %>
                    チャットを始めよう <i class="far fa-comments"></i>
                  <% end %>
                <% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>