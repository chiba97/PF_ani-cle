<div class="container user-page">
  <%= render "user/posts/error", user: @user %>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 mt-4 user-edit-wrap">
      <h3 class="post-title text-center"><i class="fas fa-paw"></i>マイページの編集<i class="fas fa-paw"></i></h3>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group mt-5">
        <i class="fas fa-paw"></i> アイコン <i class="fas fa-paw"></i>
        <%= f.label :profile_image, "写真を選択", class: "user-image-input-btn" %>
        <%= f.attachment_field :profile_image, class: "d-none"%>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :name, "ニックネーム" %> <i class="fas fa-paw"></i>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :pet, "飼っているペット" %> <i class="fas fa-paw"></i>
        <%= f.text_field :pet, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :introduction, "自己紹介" %> <i class="fas fa-paw"></i>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <div class="row pl-3">
          <%= button_tag " 保存", type: "submit", class: "btn user-show-btn fas fa-save" %>
          <%= link_to " 戻る", user_path(@user.id), class: "btn user-show-btn ml-3 fas fa-undo-alt" %>
          <%= link_to " 退会する", unsubscribe_user_path(@user.id), class: "btn user-show-btn ml-3 fas fa-exclamation-triangle" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
