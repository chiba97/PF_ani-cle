<div class="container user-page">
  <%= render "user/posts/error", user: @user %>
  <div class="row justify-content-center">
    <div class="col-sm-6 mt-4">
      <h3 class="post-title text-center"><i class="fas fa-paw"></i>マイページの編集<i class="fas fa-paw"></i></h3>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group mt-5">
        <i class="fas fa-paw"></i> アイコン <i class="fas fa-paw"></i>
        <%= f.label :profile_image, "写真を選択", class: "user-image-input-btn" %>
        <%= f.attachment_field :profile_image, class: "d-none"%>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :name, "ニックネーム" %> <i class="fas fa-paw"></i>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :pet, "飼っているペット" %> <i class="fas fa-paw"></i>
        <%= f.text_field :pet, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <i class="fas fa-paw"></i> <%= f.label :introduction, "自己紹介" %> <i class="fas fa-paw"></i>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="form-group mt-4">
        <%= button_tag type: "submit", class: "btn user-show-btn" do %>
        保存する <i class="fas fa-save"></i>
        <% end %>
        <%= link_to user_path(@user.id), class: "btn user-show-btn ml-3" do %>
        戻る <i class="fas fa-undo-alt"></i>
        <% end %>
        <%= link_to unsubscribe_user_path(@user.id), class: "btn user-show-btn ml-3" do %>
        退会する <i class="fas fa-exclamation-triangle"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
