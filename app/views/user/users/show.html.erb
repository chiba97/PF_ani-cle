<div class="container user-page">
  <p class="text-center pt-2"><%= notice %></p>

  <div class="text-center user-show-title pt-4">
    <% if @user == current_user %>
      <h2><i class="fas fa-paw"></i> マイページ <i class="fas fa-paw"></i></h2>
    <% else %>
      <h2><i class="fas fa-paw"></i> <%= @user.name %>さんのマイページ <i class="fas fa-paw"></i></h2>
    <% end %>
  </div>

  <div class="row justify-content-center text-center pt-4">
    <div class="col-sm-6">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
      <table class="table">
        <tbody>
          <tr>
            <th class="user-show-th user-th-1">ニックネーム <i class="far fa-user-circle"></i></th>
            <th class="user-show-th user-th-1"><%= @user.name %></th>
          </tr>
          <tr>
            <th class="user-show-th user-th-1">飼っているペット <i class="fas fa-dog"></i></th>
            <th class="user-show-th user-th-1">
              <% if @user.pet.present? %>
                <%= @user.pet %>
              <% else %>
                未設定
              <% end %>
            </th>
          </tr>
          <tr>
            <th class="user-show-th user-th-1">自己紹介 <i class="far fa-address-book"></i></th>
            <th class="user-show-th user-th-1">
              <% if @user.introduction.present? %>
                <%= @user.introduction %>
              <% else %>
                未設定
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="row mb-4 justify-content-center">
        <div class="col-sm-12">
          <%= link_to follows_user_path(@user.id), class: "btn user-show-btn mr-3" do %>
            フォロー <%= @user.followings.count %>人
          <% end %>
          <%= link_to followers_user_path(@user.id), class: "btn user-show-btn mr-3" do %>
            フォロワー <%= @user.followers.count %>人
          <% end %>
          <%= link_to favorites_user_path(@user.id), class: "btn user-show-btn" do %>
            お気に入りした投稿 <%= @user.favorites.count %>件
          <% end %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-sm-12">
          <% if @user.id == current_user.id %>
            <%= link_to  edit_user_path(@user.id), class: "btn user-show-btn mr-3" do %>
              編集 <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
          <% if @user != current_user %>
            <% if @user.followed_by?(current_user) %>
              <%= link_to user_relationships_path(@user.id), method: :delete, class: "btn user-show-btn mr-3" do %>
                フォロー解除 <i class="fas fa-user-minus"></i>
              <% end %>
            <% else %>
              <%= link_to user_relationships_path(@user.id), method: :post, class: "btn user-show-btn mr-3" do %>
                フォローする <i class="fas fa-user-plus"></i>
              <% end %>
            <% end %>
          <% end %>
          <%= link_to edit_user_path(@user.id), class: "btn user-show-btn" do %>
            DM <i class="far fa-comments"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <h2 class="text-center mt-5 user-show-title"><i class="fas fa-paw"></i> 投稿した記事一覧 <i class="fas fa-paw"></i></h2>
  <% if @user.posts.present? %>
    <div class="row justify-content-center">
      <%= render "user/posts/post_index", posts: @posts %>
    </div>
    <div class="pt-5 pb-3 pl-5">
      <p><%= paginate @posts %></p>
    </div>
  <% else %>
    <h3 class="text-center pt-3 pb-5">※まだ投稿していません</h3>
  <% end %>
</div>