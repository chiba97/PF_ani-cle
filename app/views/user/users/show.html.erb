<div class="container user-page">
  <p class="text-center pt-2"><%= notice %></p>

  <div class="text-center pt-4">
    <% if @user == current_user %>
      <h2 class="user-show-post-title"><i class="fas fa-paw"></i> マイページ <i class="fas fa-paw"></i></h2>
    <% else %>
      <h2 class="user-show-post-title"><i class="fas fa-paw"></i> <%= @user.name %>さん <i class="fas fa-paw"></i><br>のマイページ </h2>
    <% end %>
  </div>

  <div class="row justify-content-center text-center pt-4">
    <div class="col-sm-6">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
      <table class="table">
        <tbody>
          <tr>
            <th class="user-show-th user-th-1"><i class="far fa-user-circle"></i> ニックネーム</th>
            <th class="user-show-th user-th-1"><%= @user.name %></th>
          </tr>
          <tr>
            <th class="user-show-th user-th-1"><i class="fas fa-dog"></i> 飼っているペット</th>
            <th class="user-show-th user-th-1">
              <% if @user.pet.present? %>
                <%= @user.pet %>
              <% else %>
                未設定
              <% end %>
            </th>
          </tr>
          <tr>
            <th class="user-show-th user-th-1"><i class="far fa-address-book"></i> 自己紹介</th>
            <th class="user-show-th user-th-1">
              <% if @user.introduction.present? %>
                <%= @user.introduction %>
              <% else %>
                未設定
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="row mb-4 justify-content-center">
        <div class="col-4">
          <%= link_to "フォロー #{ @user.followings.count }人", follows_user_path(@user.id), class: "btn user-show-btns" %>
        </div>
        <div class="col-4">
          <%= link_to "フォロワー #{ @user.followers.count }人", followers_user_path(@user.id), class: "btn user-show-btns" %>
        </div>
        <div class="col-4">
          <%= link_to "お気に入り #{ @user.favorites.count }件", favorites_user_path(@user.id), class: "btn user-show-btns" %>
        </div>
      </div>
      <div class="row justify-content-center">
          <% if @user.id == current_user.id %>
            <div class="col-6">
              <%= link_to " 編集", edit_user_path(@user.id), class: "btn user-show-btns mr-3 fas fa-user-cog" %>
            </div>
          <% else %>
            <% if @user.followed_by?(current_user) %>
              <div class="col-6">
                <%= link_to " フォロー解除", user_relationships_path(@user.id), method: :delete, class: "btn user-show-btns mr-3 fas fa-user-minus" %>
              </div>
            <% else %>
              <div class="col-6">
                <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn user-show-btns mr-3 fas fa-user-plus" %>
              </div>
            <% end %>
            <% if (current_user.followed_by? @user) && (@user.followed_by? current_user) %>
              <% if @is_room == true %>
                <div class="col-6">
                  <%= link_to " チャットを始める", room_path(@room_id, user_id: @user.id), class: "btn user-show-btns far fa-comments" %>
                </div>
              <% else %>
                <div class="col-6">
                  <%= form_with model: @room, local: true do |f| %>
                    <%= fields_for @entry do |e| %>
                      <%= e.hidden_field :user_id, value: @user.id %>
                    <% end %>
                    <%= button_tag " チャットを始めよう", type: "submit", class: "btn user-show-btns far fa-comments" %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>

  <h2 class="text-center mt-5 user-show-post-title"><i class="fas fa-paw"></i> 投稿した記事一覧 <i class="fas fa-paw"></i></h2>
  <% if @user.posts.present? %>
    <div class="row justify-content-center">
      <%= render "user/posts/post_index", posts: @posts %>
    </div>
    <div class="pt-5 pb-3">
      <p><%= paginate @posts %></p>
    </div>
  <% else %>
    <h3 class="text-center no-present-title pt-3 pb-5">※まだ投稿していません</h3>
  <% end %>
</div>