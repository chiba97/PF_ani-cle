<% if post.favorited_by?(current_user) %>
  <%= link_to " いいね解除", post_favorites_path(post), class: "btn post-show-btn ml-3 fas fa-heart", method: :delete, remote: true %>
<% else %>
  <%= link_to " いいね登録", post_favorites_path(post), class: "btn post-show-btn ml-3 far fa-heart", method: :post, remote: true %>
<% end %>