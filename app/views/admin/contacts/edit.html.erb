<div class="container admin-page">
  <%= render "user/posts/error", user: @contact %>
  <div class="row admin-contact-form justify-content-center">
    <div class="col-sm-8">
      <h2 class="admin-title text-center">
        <%= @contact.user.name %>さんの<br><i class="fas fa-envelope"></i> お問い合わせ内容 <i class="fas fa-envelope"></i>
      </h2>
      <%= form_with model: @contact, url: admin_contact_path(@contact.id), method: :patch, local:true do |f| %>
      <div class="pt-3">
        <h5 class="admin-contact-title"><i class="fas fa-paw"></i> お問い合わせ日 <i class="fas fa-paw"></i></h5>
        <p class="admin-contact-text"><%= @contact.created_at.strftime("%Y年%m月%d日 ") %></p>
      </div>
      <div class="pt-3">
        <h5 class="admin-contact-title"><i class="fas fa-paw"></i> タイトル <i class="fas fa-paw"></i></h5>
        <p class="admin-contact-text"><%= @contact.title %></P>
      </div>
      <div class="pt-3">
        <h5 class="admin-contact-title"><i class="fas fa-paw"></i> お問い合わせ内容 <i class="fas fa-paw"></i></h5>
        <p class="admin-contact-text"><%= @contact.body %></P>
      </div>
      <div class="form-group mt-4">
        <h5 class="admin-contact-title"><i class="fas fa-paw"></i> <%= f.label :reply, "返信内容" %> <i class="fas fa-paw"></i></h5>
        <%= f.text_area :reply, class: "form-control" %>
      </div>
      <div class="form-group mt-4 mb-5">
        <%= button_tag type: "submit", class: "btn user-show-btn" do %>
        返信する <i class="far fa-paper-plane"></i>
        <% end %>
        <%= link_to admin_contacts_path, class: "btn user-show-btn ml-3" do %>
        戻る <i class="fas fa-undo-alt"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>