<div class="container admin-page">
  <p class="text-center pt-2"><%= notice %></p>
  <div class="row justify-content-center">
    <div class="col-sm-9">
      <h2 class="admin-title text-center pt-4 mb-5" ><i class="fas fa-envelope"></i> お問い合わせ一覧 <i class="fas fa-envelope"></i></h2>
        <% if @contacts.present? %>
          <%= render "admin/contacts/admin_contact_index", contacts: @contacts %>
        <% else %>
          <h3 class="text-center no-search-title pt-3 pb-5">※お問い合わせが届いておりません</h3>
        <% end %>
    </div>
  </div>
  <div class="pt-3 pb-3">
    <p><%= paginate @contacts %></p>
  </div>
</div>