<div class="container admin-page">
  <p class="text-center pt-2"><%= notice %></p>
  <div class="row justify-content-center">
    <div class="col-sm-10">

      <h2 class="admin-title text-center pt-4 mb-5" ><i class="fas fa-user"></i>
        <%= @user.name %>さんの会員情報詳細
      <i class="fas fa-user"></i></h2>

      <table class="table table-hover">
        <tbody>
          <tr>
            <th class="admin-th">会員ID</th>
            <td class="admin-th"><%= @user.id %></td>
          </tr>
          <tr>
            <th class="admin-th">ニックネーム</th>
            <td class="admin-th"><%= @user.name %>さん</td>
          </tr>
          <tr>
            <th class="admin-th">メールアドレス</th>
            <td class="admin-th"><%= @user.email %></td>
          </tr>
          <tr>
            <th class="admin-th">会員ステータス</th>
            <td class="admin-th">
              <% if @user.is_deleted == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_admin_user_path(@user.id), class: "btn post-index-btn" do %>
        編集 <i class="fas fa-user-cog"></i>
      <% end %>

      <h2 class="text-center mt-5 admin-title"><i class="fas fa-paw"></i>
        <%= @user.name %>さんが投稿した記事一覧
      <i class="fas fa-paw"></i></h2>
        <% if @user.posts.present? %>
          <div class="row">
            <% @posts.each do |post| %>
              <div class="col-sm-4 mt-5">
                <div class="card index-card">
                  <%= attachment_image_tag post, :post_image, class: "post-index-img" %>
                    <div class="card-body">
                      <div class="row">
                        <%= link_to user_path(post.user.id) do %>
                          <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "profile-image" %>
                        <% end %>
                      </div>
                    <div class="row user-show-index pt-2">
                      <p>ペットの種類<br><i class="fas fa-paw"></i> <%= post.pet %> <i class="fas fa-paw"></i></p>
                    </div>
                    <div class="row user-show-index">
                      <p>投稿内容<br><i class="fas fa-user"></i>
                        <%= post.body %>
                      <i class="fas fa-user"></i></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="pt-5 pb-3">
            <p><%= paginate @posts %></p>
          </div>
        <% else %>
          <h3 class="text-center pt-3 pb-5">※まだ投稿していません</h3>
        <% end %>
    </div>
  </div>
</div>