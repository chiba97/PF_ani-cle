<div class="container admin-page">
  <div class="row justify-content-center">
    <div class="col-sm-9">
      <h2 class="admin-title text-center pt-4 mb-5"><i class="fas fa-users"></i> 会員一覧 <i class="fas fa-users"></i></h2>
      <% if @users.present? %>
        <%= render "admin/users/admin_user_index", users: @users %>
      <% else %>
        <h3 class="text-center no-search-title pt-3 pb-5">※ユーザーがおりません</h3>
      <% end %>
    </div>
  </div>
  <div class="pt-3 pb-3">
    <p><%= paginate @users %></p>
  </div>
</div>